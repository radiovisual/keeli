{
	"defaultLocale": "en",
	"sourceFile": "en.json",
	"translationFiles": {
		"de": "de.json",
		"fr": "fr.json"
	},
	"pathToTranslatedFiles": "fixtures/i18n",
	"rules": {
		"no-untranslated-messages": "error",
		"no-empty-messages": "error",
		"no-extra-whitespace": {
			"severity": "error",
			"ignoreKeys": []
		},
		"no-html-messages": "error",
		"no-missing-keys": "error",
		"no-invalid-variables": "error",
		"no-malformed-keys": {
			"severity": "error",
			"namingConvention": "kebab-case"
		}
	},
	"dryRun": false,
	"enabled": true
}
